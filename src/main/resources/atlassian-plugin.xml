<atlassian-plugin key="ru.mail.jira.plugins.mailrucal" name="Simple Calendar" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="Mail.Ru Group" url="http://www.mail.ru/" />
        <param name="plugin-logo">/media/mcal.png</param>
        <param name="plugin-icon">/media/mcal.png</param>
        <param name="vendor-icon">/media/icon.png</param>
        <param name="vendor-logo">/media/logo.png</param>
    </plugin-info>

    <!-- Resources -->
    <resource type="i18n" name="i18n" location="i18n.mailrucal"/>

    <web-resource key="jcalendar" name="Mail.Ru Calendar Resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <resource type="download" name="jquery-ui-1.8.17.custom.min.js" location="media/jquery-ui-1.8.17.custom.min.js"/>
        <resource type="download" name="jquery.ui.dialog.js" location="media/jquery.ui.dialog.js"/>
        <resource type="download" name="fullcalendar.css" location="media/fullcalendar.css"/>
        <resource type="download" name="fullcalendar.js" location="media/fullcalendar.js"/>
        <resource type="download" name="jquery.json-2.3.js" location="media/jquery.json-2.3.js"/>
        <resource type="download" name="mailrucal.js" location="media/mailrucal.js"/>
        <resource type="download" name="mailrucal.css" location="media/mailrucal.css"/>
    </web-resource>

    <web-resource key="jcalendar-admin" name="Mail.Ru Calendar Admin Resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <resource type="download" name="jquery.json-2.3.js" location="media/jquery.json-2.3.js"/>
        <resource type="download" name="mailrucal.js" location="media/mailrucal.js"/>
        <resource type="download" name="mailrucal.css" location="media/mailrucal.css"/>
    </web-resource>
    <!-- End resources -->

    <!-- Sections -->
    <web-section key="mailrucal-link-section" name="Mail.Ru Calendar section" location="mailrucal-links-link" weight="10"/>
    <web-item key="mailrucal-links-link"
              name="Links Mail.Ru Calendar"
              section="system.top.navigation.bar"
              weight="47">
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.UserLoggedInCondition"/>
        <label key="mailrucal.title"/>
        <tooltip key="mailrucal.title"/>
        <link linkId="mailrucal-links-link">/plugins/servlet/mailrucal/view</link>
    </web-item>
    <web-item key="mailrucal-links-link-item"
              name="Links Mail.Ru Calendar"
              section="mailrucal-links-link/mailrucal-link-section"
              weight="47">
        <label key="mailrucal.title"/>
        <tooltip key="mailrucal.title"/>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.UserLoggedInCondition"/>
        <link linkId="mailrucal-links-link-item">/plugins/servlet/mailrucal/view</link>
    </web-item>
    <!-- End sections -->

    <!-- Rest resources -->
    <rest key="mailrucal-resources" path="/mailrucalws" version="1.0">
        <description>Provides the REST resource for the "mailrucal" plugin.</description>
    </rest>
    <!-- End rest -->

    <!-- component imports -->
    <component key="mailrucal-config" name="Mail.Ru calendar Plug-In configuration" class="ru.mail.jira.plugins.MailRuCalCfgImpl"/>

    <component key="simplecal-launcher" name="Simple Calendar Starter" class="ru.mail.jira.plugins.Starter" public="true">
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>

    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
    <component-import key="velocity-renderer" interface="com.atlassian.templaterenderer.TemplateRenderer" />
    <component-import key="loginUriProvider" interface="com.atlassian.sal.api.auth.LoginUriProvider"/>
    <!-- End imports -->

    <!-- Servlets -->
    <servlet key="mailrucal-renderer" class="ru.mail.jira.plugins.MailRuCalServlet">
        <url-pattern>/mailrucal/view</url-pattern>
    </servlet>
    <!-- End servlets -->
</atlassian-plugin>